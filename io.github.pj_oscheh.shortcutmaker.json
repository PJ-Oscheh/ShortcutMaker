{
    "app-id" : "io.github.pj_oscheh.shortcutmaker",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "47",
    "sdk" : "org.gnome.Sdk",
    "command" : "shortcutmaker",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "shortcutmaker",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "file:///home/pj/Projects"
                }
            ],
            "config-opts" : [
                "--libdir=lib"
            ]
        }
    ],
    "file": [
    {
    	"src":"data/icons/hicolor/",
    	"dest":"/share/icons/hicolor/"
    }
    ],
    "build-options" : {
        "env" : {        }
    }
}
